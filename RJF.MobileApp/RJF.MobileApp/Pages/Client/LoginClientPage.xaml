<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RJF.MobileApp.LoginClientPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Sign in to user account." Margin="0,20" FontSize="20" HorizontalOptions="CenterAndExpand"/>

            <Entry x:Name="Username" Placeholder="Username"/>

            <Entry x:Name="Password" Placeholder="Password" IsPassword="True"/>

            <Label x:Name="LoginInfo" Text="User does not exists or password is incorrect." TextColor="Red" IsVisible="False" Margin="0,20" HorizontalOptions="CenterAndExpand" FontSize="Medium"/>

            <Button Clicked="LoginButton_Clicked" Text="Sign in"/>

            <Button Clicked="ReginstrationButton_Clicked" Text="Register"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
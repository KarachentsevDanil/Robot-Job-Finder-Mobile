<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RJF.MobileApp.RegisterClientPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Create new account." Margin="0,20" FontSize="20" HorizontalOptions="CenterAndExpand"/>

            <Entry x:Name="FullName" Placeholder="Full Name"/>

            <Entry x:Name="Username" Placeholder="Username"/>

            <Entry x:Name="Password" Placeholder="Password" IsPassword="True"/>

            <Label x:Name="RegisterFailed" Text="Registration failed." TextColor="Red" IsVisible="False" Margin="0,20" HorizontalOptions="CenterAndExpand" FontSize="Medium"/>

            <Button Clicked="RegisterButton_Clicked" Text="Register client"/>

            <Button Clicked="BackButton_Clicked" Text="Back"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>